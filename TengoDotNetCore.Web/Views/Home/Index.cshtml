@{
    ViewBag.Title = "首页";
}
@section Header{
    <link href="~/lib/swiper/swiper.min.css" rel="stylesheet" />
}
<div class="container-fluid">
    <!--banner start-->
    <div class="swiper-container swiper-container swiper-container-horizontal banner">
        <div class="swiper-wrapper">
            @if (ViewBag.Banners != null) {
                for (var i = 0; i < ViewBag.Banners.Count; i++) {
                    <div class="swiper-slide text-center">
                        <a href="@ViewBag.Banners[i].LinkUrl" target="_blank">
                            <img src="@ViewBag.Banners[i].CoverImg" style="" />
                        </a>
                    </div>
                }
            }

        </div>
        <div class="swiper-pagination"></div>
    </div>
    <!--banner end-->
</div>
<br />
<div class="container home-index">
    <ul class="clearfix index-goods">
        @foreach (var item in ViewBag.Goods) {
            <li class="float-left" title="@item.Name @item.NameEn">
                <a href="/goods/detail?id=@item.Id" target="_blank">
                    <img class="square width-full" src="@item.CoverImg" />
                </a>
                <p class="price">￥@item.Price</p>
                <a href="/goods/detail?id=@item.Id">
                    <p class="goods-name">@item.Name&ensp;&ensp;@item.NameEn</p>
                </a>
            </li>
        }
    </ul>
</div>

@section Footer{
    <script src="~/lib/swiper/swiper.min.js"></script>
    <script>
        /*轮播baner start*/
        var swiper1 = new Swiper('.swiper-container', {
            loop: true,
            autoplay: true,
            speed: 1000,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            }
        });

        $(".swiper-pagination-bullet").hover(function () {
            $(this).click();
        }, function () {
            swiper1.autoplay.start();
        });

        $("")
    </script>
}